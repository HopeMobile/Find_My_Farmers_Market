<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_results_frag_layout"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".Views.MarketResultsActivity$PlaceholderFragment"
                android:orientation="vertical"
                android:theme="@style/AppTheme">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_miles_to"
        android:minHeight="?android:listPreferredItemHeight"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="1.9 Miles"
        android:background="@color/secondary_text_color"
        android:textSize="18sp"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_market_names"
        android:minHeight="?android:listPreferredItemHeight"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="Decatur Farmers Market"
        android:background="@color/secondary_text_color"
        android:textSize="18sp"
        android:paddingBottom="4dp"/>

</LinearLayout>
